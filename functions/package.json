{
  "name": "functions",
  "scripts": {
    "deploy:dev": "firebase use development && firebase functions:config:set app.environment=development && firebase deploy --only functions",
    "deploy:preview": "firebase use preview && firebase functions:config:set app.environment=preview && firebase deploy --only functions",
    "deploy:prod": "firebase use production && firebase functions:config:set app.environment=production && firebase deploy --only functions",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "test:jest": "jest",
    "test:all": "npm run build && firebase emulators:start --inspect-functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@mc-hogar/app": "^1.0.0",
    "@mc-hogar/gestion-articulos": "^1.1.0",
    "@prisma/client": "^5.9.1",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^5.0.1",
    "sharp": "^0.33.4",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@types/uuid": "^10.0.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "prisma": "^5.9.1",
    "ts-jest": "^29.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.0"
  },
  "private": true
}
